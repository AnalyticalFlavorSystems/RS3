PKG_CXXFLAGS= -I../inst/include -Ilibs3/inc/mingw -Dsleep=Sleep -DSTRICT_R_HEADERS
PKG_LIBS=$(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) -LC:/libs3$(R_ARCH)/bin -ls3 

.PHONY: all
all: $(SHLIB)

$(SHLIB): libs3.dll

export CC
export R_ARCH
export R_PACKAGE_DIR

libs3.dll:
    mkdir -p C:/libs3$(R_ARCH)/bin
	cp  libs3/libs3-libs/bin/m32/* C:/libs3$(R_ARCH)/bin/
	(cd libs3; make -f Makefile.win)
	@echo $(CURDIR)
